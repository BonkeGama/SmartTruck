@model IEnumerable<SmartTruckerApp5.Models.paymentViewModel>

@{
    ViewBag.Title = "Fuel Cost";
}

<h2>Uploaded Receipts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cargoID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.approval)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.File)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.amountpayed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DocumentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.usersID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {

    

    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cargoID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.approval)
        </td>

        <td>
            @{
                var getimage = Convert.ToBase64String(item.File);
                var picture = string.Format("data:image/jpeg;base64,{0}", getimage);
            }
             <img src="@Url.Content(picture)" width="300px;" height="300px;" />
         </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.amountpayed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DocumentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.usersID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.paymentKey }) |
            @Html.ActionLink("Details", "Details", new { id = item.paymentKey }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.paymentKey })
        </td>
    </tr>
}

</table>
